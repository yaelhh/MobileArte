<TextView
    android:id="@+id/txtLabelMascaras"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/dateDisplay"
    android:layout_marginTop="14dp"
    android:text="MÃ¡scaras" />

<TextView
    android:id="@+id/txtMasaras"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/txtLabelMascaras"
    android:layout_alignBottom="@+id/txtLabelMascaras"
    android:layout_alignLeft="@+id/dateDisplay" />

<ProgressBar
    android:id="@+id/progressBarRegistrar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/etEmailAddress"
    android:layout_centerHorizontal="true" />

<Button
    android:id="@+id/btnRegister"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/txtMasaras"
    android:layout_below="@+id/txtMasaras"
    android:layout_marginTop="19dp"
    android:layout_toRightOf="@+id/txtLabelMascaras"
    android:minWidth="@dimen/button_min_width"
    android:onClick="registerAccount"
    android:text="@string/register"
    android:textColor="@color/ghost_white" />

