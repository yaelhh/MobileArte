<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
    <!-- Contenido Principal -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#ffffff"
        />
 
    <!-- MenÃº Lateral -->
    <ListView android:id="@+id/lista"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#2E2E2E"
        android:dividerHeight="2dp"
        android:background="#424242"
        android:textColor="#424242"
        />
     
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pricipal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	tools:context=".PrincipalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.33"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/imageProgramacion"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/programacion"
            android:src="@drawable/abc_ab_share_pack_holo_light" 
            android:contentDescription="@string/Programacion"/>

        <TextView
            android:id="@+id/textProgramacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/Programacion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/BlanchedAlmond"
            android:textStyle="bold|italic"
            android:typeface="monospace" />

        

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="162dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="162dp"
            android:layout_height="wrap_content" 
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >

            <ImageButton
                android:id="@+id/ImageComunidad"
                android:layout_width="162dp"
                android:layout_height="189dp"
                android:background="@drawable/comunidad"
                android:src="@drawable/abc_ab_share_pack_holo_light"
                android:contentDescription="@string/Comunidad" />

            <TextView
                android:id="@+id/TextComunidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/LightSlateGray"
                android:shadowRadius="4.5"
                android:text="@string/Comunidad"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/BlanchedAlmond"
                android:textStyle="bold|italic"
                android:typeface="monospace" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
             android:paddingRight="5dp">

            <ImageButton
                android:id="@+id/ImageNosotros"
                android:layout_width="162dp"
                android:layout_height="189dp"
                android:background="@drawable/nosotros"
                android:src="@drawable/abc_ab_share_pack_holo_light" 
                android:contentDescription="@string/Nosotros" />

            <TextView
                android:id="@+id/TextNosotros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/LightSlateGray"
                android:shadowRadius="4.5"
                android:text="@string/Nosotros"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/BlanchedAlmond"
                android:textStyle="bold|italic"
                android:typeface="monospace" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:padding="5dp" >

        <ImageButton
            android:id="@+id/imageNovedades"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/novedades"
            android:src="@drawable/abc_ab_bottom_transparent_dark_holo" 
            android:contentDescription="@string/Novedades"/>

        <TextView
            android:id="@+id/Textnovedades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Novedades"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/BlanchedAlmond"
            android:textStyle="bold|italic"
            android:typeface="monospace" />
    </RelativeLayout>

</LinearLayout>
</android.support.v4.widget.DrawerLayout>