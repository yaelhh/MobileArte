<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/idProfile">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/Gray" >

        <TextView
            android:id="@+id/n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:text="@string/nombreUsuarioCuenta"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Black"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/usuario" />

        <Button
            android:id="@+id/btnCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/n"
            android:layout_marginTop="38dp"
            android:onClick="validarUsuarioOpcion"
            android:text="@string/Cuenta" />

        <Button
            android:id="@+id/btnCanjear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="@string/Canjear" />

        <Button
            android:id="@+id/btnMascaras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnCanjear"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="@string/Mascaras" />

        <Button
            android:id="@+id/btnPrxObras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/BtnObrasVistas"
            android:text="@string/Prox_obras" />

        <Button
            android:id="@+id/BtnObrasVistas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnCuenta"
            android:layout_marginTop="16dp"
            android:text="@string/Obras_vistas" />
    </RelativeLayout>

</LinearLayout>