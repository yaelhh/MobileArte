<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context="com.example.clientarte.LoginActivity_OLD_UNO" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.33"
        android:background="@drawable/ic_fondo_mdpi"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textArte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="@string/Arte"
            android:textAppearance="@style/AppBaseTheme"
            android:textColor="@color/Black"
            android:textColorLink="@color/Black"
            android:textSize="40sp"
            android:textStyle="bold|bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/txtMailLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textArte"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="@string/txtEmail"
            android:textColorHint="@color/Black" />

        <EditText
            android:id="@+id/txtPassLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtMailLogin"
            android:layout_below="@+id/txtMailLogin"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="@string/txtPassword"
            android:textColorHint="@color/Black" />

        <TextView
            android:id="@+id/buttonRecuperarPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="@string/button_recuperarPass"
            android:textSize="12sp"
            android:textStyle="normal"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonRegistrarseLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonRecuperarPass"
            android:layout_alignLeft="@+id/buttonLogin"
            android:layout_marginBottom="55dp"
            android:text="@string/button_registrarse" />

        <Button
            android:id="@+id/buttonLogin"
            style="@color/Blue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonRegistrarseLogin"
            android:layout_alignRight="@+id/txtPassLogin"
            android:layout_marginBottom="16dp"
            android:onClick="signupp"
            android:text="@string/button_login" />
        
        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonRecuperarPass"
            android:layout_alignRight="@+id/buttonRecuperarPass"
            android:textSize="12sp"
            android:textStyle="normal"
            android:typeface="normal" />
        
    </RelativeLayout>

