     <Button
         android:id="@+id/btnCancelar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/btnRegister"
         android:layout_alignBottom="@+id/btnRegister"
         android:layout_marginLeft="16dp"
         android:layout_toRightOf="@+id/btnRegister"
         android:minWidth="@dimen/button_min_width"
         android:onClick="cancelarAccount"
         android:text="@string/cancelar"
         android:textColor="@color/ghost_white" />

     <Button
         android:id="@+id/btnRegister"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="44dp"
         android:layout_marginLeft="42dp"
         android:minWidth="@dimen/button_min_width"
         android:onClick="registerAccount"
         android:text="@string/register"
         android:textColor="@color/ghost_white" />

     <EditText
         android:id="@+id/etFirstName"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginTop="42dp"
         android:ems="10"
         android:hint="@string/enter_first_name"
         android:inputType="textPersonName"
         android:textColor="@color/ebony"
         android:textColorHint="@color/hint_color" />

     <EditText
         android:id="@+id/etLastName"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/etFirstName"
         android:layout_marginTop="14dp"
         android:ems="10"
         android:hint="@string/enter_last_name"
         android:inputType="textPersonName"
         android:textColor="@color/ebony"
         android:textColorHint="@color/hint_color" />

     <EditText
         android:id="@+id/etEmailAddress"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/etLastName"
         android:layout_marginTop="16dp"
         android:ems="10"
         android:hint="@string/enter_email"
         android:inputType="textEmailAddress"
         android:textColor="@color/ebony"
         android:textColorHint="@color/hint_color" />

     <EditText
         android:id="@+id/etPassword"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/etEmailAddress"
         android:layout_marginTop="14dp"
         android:ems="10"
         android:hint="@string/enter_password"
         android:inputType="textPassword"
         android:textColor="@color/ebony"
         android:textColorHint="@color/hint_color" />

     <EditText
         android:id="@+id/etPasswordConfirm"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/etPassword"
         android:layout_marginTop="17dp"
         android:ems="10"
         android:hint="@string/confirm_password"
         android:inputType="textPassword"
         android:textColor="@color/ebony"
         android:textColorHint="@color/hint_color" >

         <requestFocus />
     </EditText>

</RelativeLayout>